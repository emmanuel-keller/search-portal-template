{
  "fields": {
    "$id$": {
      "type": "INTEGER",
      "fulltext": "ENGLISH"
    },
    "title": {
      "type": "TEXT",
      "fulltext": "ENGLISH"
    },
    "date": {
      "type": "LONG",
      "sort": true
    },
    "tags": {
      "type": "TEXT",
      "fulltext": "ENGLISH",
      "facet": true
    },
    "content": {
      "type": "TEXT",
      "fulltext": "ENGLISH"
    },
    "link": {
      "type": "TEXT",
      "stored": true
    },
    "full": {
      "type": "TEXT",
      "fulltext": "ASCII",
      "copy_from": [
        "title",
        "content",
        "tags"
      ]
    }
  },
  "queries": {
    "main": {
      "returned": [
        "$id$",
        "date",
        "link"
      ],
      "snippets": {
        "title": {
          "field": "title"
        },
        "content": {
          "field": "content",
          "pre_tag": "<strong>",
          "post_tag": "</strong>",
          "multivalued_separator": ". ",
          "ellipsis": "â€¦ ",
          "max_passages": 5,
          "max_length": 200,
          "break_iterator": {
            "type": "sentence",
            "language": "en-US"
          }
        }
      },
      "facets": {
        "tags": {
          "top": 10
        }
      }
    }
  }
}